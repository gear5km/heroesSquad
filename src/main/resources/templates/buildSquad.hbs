<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Cover Template for Bootstrap</title>
    <!-- Bootstrap core CSS -->
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js"></script>
    <!-- Custom styles for this template -->
    <link href="css/buildSquad.css" rel="stylesheet">
</head>
<body>
<div class="site-wrapper">
    <div class="site-wrapper-inner">
        <div class="cover-container">
            <div class="masthead clearfix">
                <div class="inner">
                    <h3 class="masthead-brand">Heroes of the Second World War</h3>
                    <nav class="nav nav-masthead">
                        <a class="nav-link" href="#">Home</a>
                        <a class="nav-link active" href="#">Squad Setup</a>
                        <a class="nav-link" href="#">Deploy</a>
                    </nav>
                </div>
                <br>
                <br>
            </div>
            <br>
            <h5 style="width:300px; position:fixed; left:5%; top:1%">Corporal {{user}} is On duty</h5>
            <br>
            <h3 style="width:300px; position:fixed; left:5%">Select Your Troops</h3>
            <img src="images/sectionLogo.png" style="width:200px; position:fixed; left:8%; top:15%">
            <div class="container-fluid" style="position:fixed; left:30%; top:5%;">
                <h5>Your Section Composition:</h5>
                {{#each mySectionMembers}}
                    <p>Name: {{name}}</p>
                    <p>Health: {{health}}</p>
                    <p>Skill: {{skill}}</p>
                {{/each}}
                <form action="/deploy">
                    <button class="btn btn-primary" >Deploy</button>
                </form>
            </div>
            <div class="row" style="position:relative; margin-top:20%">
                <form action="/build_squad/add" method="post">
                    <div class="col-md-11">
                        <h3>Bren Gunner</h3>
                        <img src="images/brenVectorWhite.svg"  width="700" height="400" alt=""/>
                        <p>Bren Mk.3</p>
                        <p>{{health}}</p>
                        <p>{{skill}}</p>
                        <div class="form-group">
                            <label for="setBrenName"> Set Your Bren Gunners Name</label><br>
                            <input type="text" id="setBrenName" name="setBrenName" placeholder="Bren Gunners Name">
                            <br>
                        </div>
                        <br>
                        <br>
                    </div>
                    <div class="col-md-11">
                        <h3>Thompson Gunner</h3>
                        <img src="images/tommyVectorWhite.svg" width="700" height="400" alt=""/>
                        <p>M1A1 Thompson SMG</p>
                        <p>{{health}}</p>
                        <p>{{skill}}</p>
                        <div class="form-group">
                            <label for="setThompsonName"> Set Your Bren Gunners Name</label><br>
                            <input type="text" id="setThompsonName" name="setThompsonName">
                            <br>
                        </div>
                        <br>
                        <br>
                    </div>
                    <div class="col-md-11">
                        <h3>Rifleman</h3>
                        <img src="images/no4AltWhite.svg" width="700" height="400" alt=""/>
                        <p>No.4 Mk.1 Lee Enfield</p>
                        <p>{{health}}</p>
                        <p>{{skill}}</p>
                        <div class="form-group">
                            <label for="setrifleManName"> Set Your Bren Gunners Name</label><br>
                            <input type="text" id="setrifleManName" name="setrifleManName">
                            <br>
                        </div>
                        <br>
                        <br>
                    </div>
                <!--<a href="#" class="btn btn-lg btn-secondary">Start</a>-->
                    <button type="submit" class="btn btn-lg btn-secondary"  action="/build_squad" >Select</button>
                </form>
            </form>
        </div>

    </div>
</div>
<footer class="w-100 py-4 flex-shrink-0" style="height:200px; color:grey">
    <p style="color:white">A Project by gear5km for Moringa School</p>
</footer>
</div>
</body>